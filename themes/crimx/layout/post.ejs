<%
var post_cover = page.cover? page.cover : theme.cover.post;
var cover_position = config.cover_position[post_cover] || 'center';
var path_to_cover = theme.cover.path + post_cover;
%>


<%- partial('_partial/cover', {
    cover_position: cover_position,
    path_to_cover: path_to_cover
  }, {
    cache: !config.relative_link
  })
%>

<div class="main-content">
  <%- partial('_partial/toc', null, {cache: !config.relative_link}) %>
  <%- partial('_partial/article', {post: page, index: false}) %>
  <%- partial('_partial/disqus') %>
</div> <!-- .main-content -->

<%- partial('_partial/menu', {
    cover_position: cover_position,
    path_to_cover: path_to_cover
  })
%>

<%- partial('_partial/menu-icon') %>
