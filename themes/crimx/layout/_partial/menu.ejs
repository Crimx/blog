<div class="site-menu" style="background-image:linear-gradient(rgba(0,0,0,.4),rgba(0,0,0,.4)),url('<%- path_to_cover %>');background-position:0,<%- cover_position %>;background-size:auto,cover">
  <div class="site-menu-inner-wrapper">
    <div class="menu-logo">
      <svg><use xlink:href="<%- theme.icon_symbols %>#icon-crimx"></use></svg>
      <a href="/"></a>
    </div>
    <ul class="menu-social-icons">
      <li class="icon-weibo">
        <a target="_blank" href="//www.weibo.com/<%- theme.weibo %>"></a>
        <svg><use xlink:href="<%- theme.icon_symbols %>#icon-weibo"></use></svg>
      </li>
      <li class="icon-github">
        <a target="_blank" href="//github.com/<%- theme.github %>"></a>
        <svg><use xlink:href="<%- theme.icon_symbols %>#icon-github"></use></svg>
      </li>
      <li class="icon-mail">
        <a target="_blank" href="mailto:<%- theme.mail %>"></a>
        <svg><use xlink:href="<%- theme.icon_symbols %>#icon-mail"></use></svg>
      </li>
      <li class="icon-rss">
        <a target="_blank" href="<%- url_for(theme.rss) %>"></a>
        <svg><use xlink:href="<%- theme.icon_symbols %>#icon-rss"></use></svg>
      </li>
    </ul>
    <ul class="menu-navs">
      <li><a href="/categories/">Categories</a></li>
      <li><a href="/archives/">Archives</a></li>
      <li><a href="/tags/">Tags</a></li>
      <li><a href="/search/">Search</a></li>
      <li><a href="/about/">About</a></li>
    </ul>
  </div>
</div>
<div class="site-menu-mask"></div>
