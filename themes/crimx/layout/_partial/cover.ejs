<header class="site-cover  js-progressive-bg-container" style="background: url('<%- path_to_cover %>') <%- cover_position %>/cover">

  <div class="site-cover-bg-thumb js-progressive-bg-thumbnail" style="background: url('<%- path_to_thumbnail %>') <%- cover_position %>/cover"></div>

  <a class="cover-logo" href="/"></a>

  <% if (is_post()) { %>
    <div class="title-wrapper">
      <%- partial('post/title', {class_name: 'site-title', post: page}) %>
        <div class="article-meta">
          <%- partial('post/category', {post: page, prefix: false}) %>
          <%- partial('post/date', {class_name: 'article-date', date_format: null, post: page}) %>
          <a rel="license" class="cc-license-wrapper" href="http://creativecommons.org/licenses/by-nc/4.0/" target="_blank" title="This work is licensed under a Creative Commons Attribution-NonCommercial 4.0 International License.">
            <svg class="cc-license" fill="#fff">
              <use xlink:href="<%- theme.icon_symbols %>#icon-cc-license"></use>
            </svg>
          </a>
        </div>
    </div>
  <% } else { %>
    <svg class="cover-icon-down" fill="#fff">
      <use xlink:href="<%- theme.icon_symbols %>#icon-chevron-down"></use>
    </svg>
  <% } %>

</header>
