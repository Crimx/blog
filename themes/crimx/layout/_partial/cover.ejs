<% 
var cover = url_for(theme.cover.default);;

if (is_post()) {
  if (page.cover) {
    cover = url_for(page.path + page.cover);
  } else {
    cover = url_for(theme.cover.post);
  }
}

/*
 *  else if (is_home()) {
 *   cover = url_for(theme.cover.home);
 * } else if (is_archive()) {
 *   cover = url_for(theme.cover.archive);
 * } else if (is_category()) {
 *   cover = url_for(theme.cover.category);
 * } else if (is_tag()) {
 *   cover = url_for(theme.cover.tag);
 * }
 */

%>

<header class="site-cover" style="background-image:linear-gradient(transparent 60%,rgba(0,0,0,.6) 100%),linear-gradient(rgba(0,0,0,.1),rgba(0,0,0,.1)),url('<%- cover %>');">

  <%- partial('svg-icons/logo', {id_name: 'cover-logo'}) %>

  <div class="title-wrapper">
    <%- partial('post/title', {class_name: 'site-title', post: page}) %>
    <% if (is_post()) { %>
      <div class="article-meta">
        <%- partial('post/category', {post: page, prefix: false}) %>
        <%- partial('post/date', {class_name: 'article-date', date_format: null, post: page}) %>
        <a rel="license" class="cc-license-wrapper" href="http://creativecommons.org/licenses/by-nc/4.0/" target="_blank" title="This work is licensed under a Creative Commons Attribution-NonCommercial 4.0 International License."><%- partial('svg-icons/cc-license', {id_name: 'cc-license'}) %></a>
      </div>
    <% } %>
  </div>

</header>
