<% if (locals.titlename) { %>
  <h1 class="post-list-header"><%- titlename %></h1>
<% } %>

<%
var colors = rainbow_color_templatte()
var i = -1
page.posts.sort('-date').each((post) => {
  i += 1
  var color = colors[i%colors.length]
  var cover_info = get_cover_info(post.cover)
%>
  <ul class="post-list">
    <li class="post-list-item" style="background-color:<%- color %>;background-image:linear-gradient(rgba(0,0,0,.3),rgba(0,0,0,.3)),url('<%- cover_info.path_to_cover %>');background-position:0,<%- cover_info.cover_position %>;background-size:auto,cover"><a class="post-list-link" href="<%- url_for(post.path) %>"><h1 class="post-list-title"><%- post.title %></h1></a></li>
  </ul>
<%
})
%>
